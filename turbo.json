{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["USE_MSW", "VERBOSE"],
    "ui": "tui",
    "tasks": {
        "dev": {
            "dependsOn": ["^build"],
            "cache": false,
            "persistent": true
        },
        "dev-msw": {
            "dependsOn": ["^build"],
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "storybook-static/**"]
        },
        "serve-build": {
            "dependsOn": ["build"],
            "cache": false,
            "persistent": true
        },
        "lint": {
            // Temporary disabling knip until Rsbuild and Rslib plugins are available.
            // "dependsOn": ["eslint", "typecheck", "//#syncpack", "//#knip"]
            "dependsOn": ["eslint", "typecheck", "//#syncpack"]
        },
        "//#eslint": {
            "outputs": ["node_modules/.cache/eslint"]
        },
        "eslint": {
            "outputs": ["node_modules/.cache/eslint"]
        },
        "//#typecheck": {
            "outputs": ["node_modules/.cache/tsbuildinfo.json"]
        },
        "typecheck": {
            "outputs": ["node_modules/.cache/tsbuildinfo.json"]
        },
        "//#syncpack": {},
        "//#knip": {},
        "@rsbuild-sample/app#test": {
            "dependsOn": ["@workleap/swc-configs#build", "@rsbuild-sample/rslib-lib#build"],
            "outputs": ["node_modules/.cache/jest/**"]
        },
        "@webpack-sample/app#test": {
            "dependsOn": ["@workleap/swc-configs#build", "@webpack-sample/tsup-lib#build"],
            "outputs": ["node_modules/.cache/jest/**"]
        },
        "test": {
            "dependsOn": ["@workleap/swc-configs#build"],
            "outputs": ["node_modules/.cache/jest/**"]
        }
    }
}
